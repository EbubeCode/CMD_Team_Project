<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.CMD.ViewMemberRecordController">
       <AnchorPane fx:id="view_member_pane" prefHeight="450.0" prefWidth="467.0" style="-fx-background-color: #2c3e50;">
        <Circle fx:id="picture_circle" fill="#34495e" layoutX="382.0" layoutY="74.0" radius="60.0" stroke="WHITE" strokeType="INSIDE" />
        <JFXButton fx:id="ok_button" alignment="CENTER" layoutX="368.0" layoutY="400.0" onMouseClicked="#handleOkButton" prefHeight="38.0" prefWidth="47.0" style="-fx-background-color: #34495e; -fx-background-radius: 20;" text="OK" textFill="WHITE">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </JFXButton>
        <Label fx:id="member_name_label" alignment="CENTER" layoutX="306.0" layoutY="156.0" prefHeight="22.0" prefWidth="156.0" text="Unknown name" textFill="WHITE" wrapText="true">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </Label>
      <TableView fx:id="record_table" layoutX="14.0" layoutY="23.0" prefHeight="405.0" prefWidth="273.0" style="-fx-background-radius: 10; -fx-background-color: #34495e;">
         <columns>
            <TableColumn fx:id="date_table_column" prefWidth="135.0" text="Date">
               <cellValueFactory>
                  <PropertyValueFactory property="name" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="amount_table_column" prefWidth="137.0" text="Amount">
               <cellValueFactory>
                  <PropertyValueFactory property="name" />
               </cellValueFactory>
            </TableColumn>
         </columns>
      </TableView>
      <Label fx:id="member_email_label" alignment="CENTER" layoutX="306.0" layoutY="186.0" prefHeight="22.0" prefWidth="156.0" text="Unknown email" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Segoe Script" size="12.0" />
         </font>
      </Label>
      <Label fx:id="member_mobile_label" alignment="CENTER" layoutX="306.0" layoutY="216.0" prefHeight="22.0" prefWidth="156.0" text="Unknown phone" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Segoe Script" size="12.0" />
         </font>
      </Label>
      <Label fx:id="member_dob_label" alignment="CENTER" layoutX="306.0" layoutY="246.0" prefHeight="22.0" prefWidth="156.0" text="Unknown DOB" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Segoe Script" size="12.0" />
         </font>
      </Label>

    </AnchorPane>
    <AnchorPane fx:id="select_member_pane" prefHeight="450.0" prefWidth="467.0" style="-fx-background-color: #2c3e50;">
        <JFXButton fx:id="view_record_button" alignment="CENTER" layoutX="351.0" layoutY="406.0" onAction="#handleViewRecord" prefHeight="30.0" prefWidth="102.0" style="-fx-background-color: #34495e; -fx-background-radius: 20;" text="View Record" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </JFXButton>
        <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" text="Select Member" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </Label>

      <Label fx:id="close_label" alignment="CENTER" layoutX="426.0" layoutY="7.0" onMouseClicked="#closeLabelPressed" onMouseEntered="#handleMouseEntered" onMouseExited="#handleMouseExited" prefHeight="37.0" prefWidth="37.0" text="X" textFill="#fffefe">
         <font>
            <Font name="Segoe Script Bold" size="20.0" />
         </font>
         <cursor>
            <ImageCursor fx:constant="HAND" />
         </cursor>
      </Label>
      <TableView fx:id="name_table" layoutX="14.0" layoutY="59.0" prefHeight="333.0" prefWidth="354.0" style="-fx-background-radius: 10; -fx-background-color: #34495e;" />
    </AnchorPane>
   </AnchorPane>
