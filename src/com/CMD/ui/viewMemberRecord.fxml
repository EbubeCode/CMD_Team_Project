<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.CMD.ViewMemberRecordController">
   <children>
   
       <AnchorPane fx:id="view_member_pane" prefHeight="450.0" prefWidth="432.0" style="-fx-background-color: #2c3e50;">
        <JFXListView fx:id="record_listView" layoutX="14.0" layoutY="14.0" prefHeight="405.0" prefWidth="273.0" style="-fx-background-color: #34495e; -fx-background-radius: 10;" stylesheets="@style.css" />
