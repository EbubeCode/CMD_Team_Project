        <JFXButton fx:id="ok_button" alignment="CENTER" layoutX="368.0" layoutY="400.0" prefHeight="38.0" prefWidth="47.0" style="-fx-background-color: #34495e; -fx-background-radius: 20;" text="OK" textFill="WHITE">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </JFXButton>
        <Label fx:id="member_name_label" alignment="CENTER" contentDisplay="CENTER" layoutX="307.0" layoutY="134.0" text="Unknown name" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </Label>
        <Label fx:id="member_email_label" alignment="CENTER" layoutX="306.0" layoutY="156.0" text="Unknown email" textFill="WHITE" wrapText="true">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </Label>
        <Label fx:id="member_mobile_label" alignment="CENTER" layoutX="303.0" layoutY="178.0" text="Unknown mobile" textFill="WHITE" wrapText="true">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </Label>
    </AnchorPane>
    <AnchorPane fx:id="select_member_pane" prefHeight="450.0" prefWidth="432.0" style="-fx-background-color: #2c3e50;">
        <JFXButton fx:id="view_record_button" alignment="CENTER" layoutX="324.0" layoutY="406.0" prefHeight="30.0" prefWidth="102.0" style="-fx-background-color: #34495e; -fx-background-radius: 20;" text="View Record" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </JFXButton>
        <JFXListView fx:id="select_member_listView" layoutX="14.0" layoutY="45.0" prefHeight="333.0" prefWidth="322.0" style="-fx-background-color: #34495e; -fx-background-radius: 15;" stylesheets="@style.css" />
