            <font>
                <Font name="Segoe Script" size="16.0" />
            </font>
        </Label>
      <Label fx:id="close_label" alignment="CENTER" layoutX="395.0" onMouseClicked="#closeLabelPressed" onMouseEntered="#handleMouseEntered" onMouseExited="#handleMouseExited" prefHeight="37.0" prefWidth="37.0" text="X" textFill="#fffefe">
         <font>
            <Font name="Segoe Script Bold" size="20.0" />
         </font>
         <cursor>
            <ImageCursor fx:constant="HAND" />
         </cursor>
      </Label>
    </AnchorPane>
   </children>
</AnchorPane>
