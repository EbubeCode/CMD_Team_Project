<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXProgressBar?>
<?import javafx.scene.ImageCursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.CMD.ViewMemberRecordController">
       <AnchorPane fx:id="view_member_pane" prefHeight="450.0" prefWidth="516.0" style="-fx-background-color: #2c3e50;">
        <Circle fx:id="picture_circle" fill="#34495e" layoutX="402.0" layoutY="100.0" radius="91.0" stroke="WHITE" strokeType="INSIDE" />
        <JFXButton fx:id="ok_button" alignment="CENTER" layoutX="455.0" layoutY="398.0" onMouseClicked="#handleOkButton" prefHeight="38.0" prefWidth="47.0" style="-fx-background-color: #34495e; -fx-background-radius: 20;" text="OK" textFill="WHITE">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </JFXButton>
        <Label fx:id="member_name_label" alignment="CENTER" layoutX="306.0" layoutY="214.0" prefHeight="22.0" prefWidth="194.0" text="Unknown name" textFill="WHITE" wrapText="true">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </Label>
      <TableView fx:id="record_table" layoutX="14.0" layoutY="23.0" prefHeight="405.0" prefWidth="273.0" style="-fx-background-radius: 10; -fx-background-color: #34495e;" stylesheets="@style.css">
         <columns>
            <TableColumn fx:id="date_table_column" maxWidth="139.0" minWidth="-1.0" prefWidth="133.0" text="Date">
               <cellValueFactory>
                  <PropertyValueFactory property="name" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="amount_table_column" maxWidth="272.0" minWidth="-Infinity" prefWidth="139.0" text="Amount">
               <cellValueFactory>
                  <PropertyValueFactory property="name" />
               </cellValueFactory>
            </TableColumn>
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Label fx:id="member_email_label" alignment="CENTER" layoutX="306.0" layoutY="244.0" prefHeight="22.0" prefWidth="194.0" text="Unknown email" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Segoe Script" size="12.0" />
         </font>
      </Label>
      <Label fx:id="member_mobile_label" alignment="CENTER" layoutX="306.0" layoutY="274.0" prefHeight="22.0" prefWidth="194.0" text="Unknown phone" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Segoe Script" size="12.0" />
         </font>
      </Label>
      <Label fx:id="member_dob_label" alignment="CENTER" layoutX="306.0" layoutY="304.0" prefHeight="22.0" prefWidth="194.0" text="Unknown DOB" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Segoe Script" size="12.0" />
         </font>
      </Label>

    </AnchorPane>
    <AnchorPane fx:id="select_member_pane" prefHeight="450.0" prefWidth="514.0" style="-fx-background-color: #2c3e50;">
        <JFXButton fx:id="view_record_button" alignment="CENTER" layoutX="404.0" layoutY="406.0" onAction="#handleViewRecord" prefHeight="30.0" prefWidth="102.0" style="-fx-background-color: #34495e; -fx-background-radius: 20;" text="View Record" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </JFXButton>
        <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" text="Select Member" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Segoe Script" size="12.0" />
            </font>
        </Label>

         <Label fx:id="close_label" alignment="CENTER" layoutX="469.0" onMouseClicked="#closeLabelPressed" onMouseEntered="#handleMouseEntered" onMouseExited="#handleMouseExited" prefHeight="44.0" prefWidth="47.0" text="X" textFill="#fffefe">
         <font>
            <Font name="Segoe Script Bold" size="20.0" />
         </font>
         <cursor>
            <ImageCursor fx:constant="HAND" />
         </cursor>
      </Label>
      <TableView fx:id="name_table" layoutX="14.0" layoutY="59.0" prefHeight="333.0" prefWidth="375.0" style="-fx-background-radius: 10; -fx-background-color: #34495e;" stylesheets="@style.css" />
      <JFXProgressBar fx:id="progressBar" layoutX="102.0" layoutY="416.0" prefHeight="11.0" visible="false" />
    </AnchorPane>
   </AnchorPane>
